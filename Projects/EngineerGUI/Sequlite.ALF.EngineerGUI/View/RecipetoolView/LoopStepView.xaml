<UserControl x:Class="Sequlite.ALF.EngineerGUI.View.RecipetoolView.LoopStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sequlite.ALF.EngineerGUI.View.RecipetoolView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cycles:" Margin="0,5"/>
                <TextBox Width="60" VerticalAlignment="Top" Margin="5" Text="{Binding Path=LoopCycles}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:" Margin="0,5"/>
                <TextBox Width="100" VerticalAlignment="Top" Margin="5" Text="{Binding Path=LoopName}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

