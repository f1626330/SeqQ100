<UserControl x:Class="Sequlite.ALF.EngineerGUI.View.BarCodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sequlite.ALF.EngineerGUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="FC Barcode:" Width="80" Margin="5" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox Width="150" Text="{Binding Path= ScannedCode, TargetNullValue= N/A}" Margin="5"/>
            <Button Content="Read" Width="50" Command="{Binding Path=ReadCmd}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
