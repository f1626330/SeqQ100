    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Border Grid.Row="0" VerticalAlignment="Stretch" Background="{StaticResource commonBk}"
                Visibility="{Binding IsVisible, ElementName=pg, Converter={StaticResource booleanToHiddenNegateConverter}}">
