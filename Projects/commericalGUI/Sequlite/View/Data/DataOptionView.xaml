                        </Button.CommandParameter>
                    </wpfFramework:ImageButton>

                    <wpfFramework:ImageButton Grid.Row="3"
                        Style="{StaticResource btnAction2}"  
                        ImageContent="pack://application:,,,/Resources/Images/DataDelete.png" >
